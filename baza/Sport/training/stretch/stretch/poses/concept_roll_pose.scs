		(*
        <- statement;;
		=> nrel_main_idtf: [Утв.(поза с валиком)] (* <- lang_ru;; *);;
		<= nrel_sc_text_translation: ...
			(*
			-> rrel_example:[Положите на пол мягкий мат, коврик или большое полотенце, скрученное в небольшой валик, и лягте на него <b><sc_element sys_idtf="concept_back_muscles">спиной</b></sc_element> так, чтобы валик оказался как раз под поясничным отделом. Затем вытяните руки за голову и постарайтесь <b><sc_element sys_idtf="concept_stretch">растянуться</b></sc_element> как можно сильнее.](*<- lang_ru;;=>nrel_format:format_html;;*);;
			*);;
		*);

