=> nrel_main_idtf:
          [roll pose](*<-lang_en;;*);
          [поза с валиком](*<-lang_ru;;*);

<- rrel_key_sc_element: ... 
		(*
        <- definition;;
		=> nrel_main_idtf: [Опр.(поза с валиком)] (* <- lang_ru;; *);;
		<= nrel_sc_text_translation: ...
			(*
			-> rrel_example:[Эта поза <b><sc_element sys_idtf="concept_stretch">растягивает</b></sc_element> прямые <b><sc_element sys_idtf="concept_stomach_muscles">мышцы живота</b></sc_element>, косые <b><sc_element sys_idtf="concept_stomach_muscles">мышцы живота</b></sc_element> (крупные и мелкие), поперечные брюшные мышцы, <b><sc_element sys_idtf="latissimus_dorsi">широчайшие мышцы спины</b></sc_element>.](*<- lang_ru;;=>nrel_format:format_html;;*);;
			*);;
		*);

